[server]
[mysqld]


#
# * Basic Settings
#

user                    = mysql
port                    = 3306
socket                  = /run/mysqld/mysqld.sock
pid-file                = /run/mysqld/mysqld.pid
basedir                 = /usr
datadir                 = /var/lib/mysql
tmpdir                  = /tmp
blind-adress            = 0.0.0.0

#
# * Fine Tuning
#

max_allowed_packet      = 1G
expire_logs_days        = 10
